<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:background="@color/color_menu_back_ground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/profile_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:background="@color/mdtp_background_color">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="50dp"
                    android:src="@drawable/app_logo_100"/>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:textColor="@color/color_menu_header_bold_text"
                    android:singleLine="true"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:maxLines="1"
                    android:text=""
                    android:singleLine="true"
                    android:textColor="@color/color_menu_header_small_text"
                    android:textSize="13dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/edit"
                android:layout_marginRight="10dp"/>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorView" />


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="fill_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:background="@color/pure_white"
                   android:id="@+id/book_a_ride">

                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:layout_marginRight="10dp"
                       android:tint="@color/color_menu_icon"
                       android:src="@drawable/ic_book"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:text="@string/TRIAL_ACTIVITY__book_rides"
                       android:textSize="@dimen/menu_text_size"
                       android:textColor="@color/color_menu_text"
                       android:gravity="center|left"/>
               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/trips_menu_btn"
                   android:background="@color/pure_white">

                   <ImageView
                       android:id="@+id/imageView2"
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_trips"
                       android:tint="@color/color_menu_icon" />

                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:textSize="@dimen/menu_text_size"
                       android:layout_height="fill_parent"
                       android:text="@string/TRIAL_ACTIVITY__your_trips"
                       android:textColor="@color/color_menu_text"
                       android:gravity="center|left"/>
               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/payment_menu_btn"
                   android:visibility="visible"
                   android:background="@color/pure_white">
                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_payment"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:id="@+id/typeFaceTextMonixRegular2"
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:gravity="center|left"
                       android:text="@string/TRIAL_ACTIVITY__payments"
                       android:textColor="@color/color_menu_text"
                       android:textSize="@dimen/menu_text_size" />


               </LinearLayout>






               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/rate_card_menu_btn"
                   android:background="@color/pure_white">
                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_tag_us_dollar"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:text="@string/TRIAL_ACTIVITY__rate_card"
                       android:textColor="@color/color_menu_text"
                       android:textSize="@dimen/menu_text_size"
                       android:gravity="center|left"
                       android:id="@+id/typeFaceTextMonixBold" />


               </LinearLayout>






               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/wallet_btn"
                   android:visibility="visible"
                   android:background="@color/pure_white">
                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_wallet"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:text="@string/TRIAL_ACTIVITY__wallet"
                       android:textColor="@color/color_menu_text"
                       android:textSize="@dimen/menu_text_size"
                       android:gravity="center|left" />


               </LinearLayout>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:visibility="visible"
                   android:id="@+id/notification_menu_btn"
                   android:background="@color/pure_white">

                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_notifications"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:textSize="@dimen/menu_text_size"
                       android:text="@string/TRIAL_ACTIVITY__notifications"
                       android:textColor="@color/color_menu_text"
                       android:gravity="center|left"/>
               </LinearLayout>



               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/icons_8_muted_grey"
                   android:layout_margin="20dp"/>




               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/report_issue_menu_btn"
                   android:background="@color/pure_white">

                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/report"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:textSize="@dimen/menu_text_size"
                       android:text="@string/TRIAL_ACTIVITY__report_issue"
                       android:textColor="@color/color_menu_text"
                       android:gravity="center|left"/>
               </LinearLayout>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/customer_support"
                   android:background="@color/pure_white">

                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_phone"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:textSize="@dimen/menu_text_size"
                       android:text="@string/TRIAL_ACTIVITY__customer_suppport"
                       android:textColor="@color/color_menu_text"
                       android:gravity="center|left"/>
               </LinearLayout>




               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/call_support_menu_btn"
                   android:visibility="gone"
                   android:background="@color/pure_white">

                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/call"/>

                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:id="@+id/typeFaceTextMonixRegular"
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:gravity="center|left"
                       android:text="@string/TRIAL_ACTIVITY__call_support"
                       android:textColor="@color/color_menu_text"
                       android:textSize="@dimen/menu_text_size" />
               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/terms_and_condition_menu_btn"
                   android:background="@color/pure_white">

                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_terms_condition"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:textSize="@dimen/menu_text_size"
                       android:text="@string/TRIAL_ACTIVITY__terms_and_condition"
                       android:textColor="@color/color_menu_text"
                       android:gravity="center|left"/>
               </LinearLayout>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingLeft="25dp"
                   android:id="@+id/about_menu_btn"
                   android:background="@color/pure_white">

                   <ImageView
                       android:layout_width="@dimen/icon_width"
                       android:layout_height="@dimen/icon_height"
                       android:tint="@color/color_menu_icon"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_about_us"/>
                   <com.ide.customer.samir.customviews.TypeFaceTextMonixRegular
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:textSize="@dimen/menu_text_size"
                       android:text="@string/TRIAL_ACTIVITY__about_us"
                       android:textColor="@color/color_menu_text"
                       android:gravity="center|left"/>
               </LinearLayout>
           </LinearLayout>
       </ScrollView>



    </LinearLayout>



</android.support.v7.widget.CardView>


