<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_total_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/RIDE_SELECTED_ACTIVITY__bill_detail"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RIDE_SELECTED_ACTIVITY__total_distance_travel"
                android:textColor="@color/muted_black"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_distance_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-----"
                    android:textColor="@color/muted_black"
                    android:textSize="13dp"
                     />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RIDE_SELECTED_ACTIVITY__distance_fare"
                android:textColor="@color/muted_black"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/total_fare_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- "
                    android:textColor="@color/muted_black"
                    android:textSize="13dp"
                     />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RIDE_SELECTED_ACTIVITY__ride_time_charges"
                android:textColor="@color/muted_black"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/ride_time_charges_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="---"
                    android:textColor="@color/muted_black"
                    android:textSize="13dp"
                     />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RIDE_SELECTED_ACTIVITY__night_time"
                android:textColor="@color/muted_black"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/night_time_charge_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textColor="@color/muted_black"
                    android:textSize="13dp"
                     />



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RIDE_SELECTED_ACTIVITY__peak_time_charges"
                android:textColor="@color/muted_black"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/peak_time_charge_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textColor="@color/muted_black"
                    android:textSize="13dp"
                    />



            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RIDE_SELECTED_ACTIVITY__waiting_charge"
                android:textColor="@color/muted_black"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/wating_charge_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textColor="@color/muted_black"
                    android:textSize="13dp"
                    />



            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coupon_code_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coupon Applied (START EXTRA 45)"
                android:textColor="@color/muted_black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/coupon_value_txt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="-------"
                android:textColor="@color/muted_black"
                android:textSize="13dp"
                 />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:maxLines="1"
            android:text=".............................................................................................................."
            android:textColor="@color/muted_black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:text="@string/RIDE_SELECTED_ACTIVITY__total_bill"
                android:textColor="@color/muted_black"
                android:textSize="13dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/total_gross_bill_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="----"
                    android:textColor="@color/muted_black"
                    android:textSize="13dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/icons_8_muted_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/RIDE_SELECTED_ACTIVITY__payment"
            android:textSize="14dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/payment_mode_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:text="@string/RIDE_SELECTED_ACTIVITY__cash"
                android:textColor="@color/muted_black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/payment_amount_done_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-------"
                    android:textColor="@color/muted_black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>