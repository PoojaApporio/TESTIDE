<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".7"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_light_for_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
            android:textColor="@color/muted_black"
            android:textSize="13dp"
        android:text="Please Set tail value for driver . Tail value is the factor by which the root is refreshed or teh factor by which new route is generated. By default tail value is 200 meter , this means that route will refresh when ever the driver moves above 200 meters. So you will see tail of 200 meter before route is refreshed"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:paddingRight="30dp">
            <EditText
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:hint="200 "
                android:id="@+id/meter_edt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="meters"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:textColor="@color/pure_white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>